<%- include('inc/header') -%>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Dashboard
    </h1>
    <ol class="breadcrumb">
      <li><a href="/admin"><i class="fa fa-home"></i> Home</a></li>
      <li class="active">Usuários</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content container-fluid">

    <div class="row">
      <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="info-box" onclick="window.location.href = '/users'" style="cursor:pointer">

          <span class="info-box-icon bg-yellow">
            <i class="ion ion-ios-people-outline"></i>
          </span>

          <div class="info-box-content">
            <span class="info-box-text">Usuários</span>
            <span class="info-box-number"><%= data.nrusers %></span>
          </div>

          <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
      </div>
      <!-- /.col -->
      <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="info-box" onclick="window.location.href = '/email'" style="cursor:pointer">
          <span class="info-box-icon bg-red">
            <i class="ion ion-ios-chatboxes"></i>
          </span>

          <div class="info-box-content">
            <span class="info-box-text">Email</span>
            <span class="info-box-number">0</span>
          </div>
          <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
      </div>
      <!-- /.col -->

    </div>

  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<%- include('inc/footer') -%>